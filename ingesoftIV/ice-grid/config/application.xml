<icegrid>

  <application name="Simple">

    <node name="node1">
      <server id="SimpleServer" exe="java" activation="on-demand">
        <option>-jar</option>
        <option>../server/build/libs/server.jar</option>
        <adapter name="Hello" endpoints="tcp -h localhost">
          <object identity="hello" type="::Demo::Hello" property="Identity"/>
        </adapter>

      </server>
      <server id="SimpleServer-1" exe="java" activation="on-demand">
        <option>-jar</option>
        <option>../server/build/libs/server.jar</option>
        <adapter name="Hello" endpoints="tcp -h localhost">
          <object identity="hello-1" type="::Demo::Hello" property="Identity"/>
        </adapter>

      </server>
    </node>

  </application>

</icegrid>